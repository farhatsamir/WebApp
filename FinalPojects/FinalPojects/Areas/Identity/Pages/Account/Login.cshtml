@page
@model LoginModel

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="~/css/stylelogin.css">

    </head>
    <body>
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">
            <div class="signup">
                <form method="post">
                    <label for="chk" aria-hidden="true">Sign up</label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="text" class="input1" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="input1" />
                    <button>Sign up</button>
                </form>
            </div>

            <div class="login">
                <form method="post">

                    <label for="chk" aria-hidden="true">Login</label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="text" class="input1" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>              
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="input1" />

                    <button>Login</button>
                </form>
            </div>
        </div>

    </body>
    </html>



